<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bluetooth_pane"
        android:visibility="invisible"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <TextView
            android:gravity="center|start"
            android:id="@+id/frag_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:text="장치 찾기"
            android:layout_toStartOf="@+id/search_btn"
            />
        <Button
            android:text="찾기"
            android:textSize="15sp"
            android:id="@+id/search_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/frag_title"
            android:layout_alignTop="@+id/frag_title"
            android:layout_alignParentEnd="true"
            />
        <ListView
            android:layout_below="@+id/frag_title"
            android:id="@+id/blue_gridview"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
        </ListView>
    </RelativeLayout>
    <TextView
        android:layout_margin="20dp"
        android:id="@+id/gmae_start_btn"
        android:gravity="center"
        android:textSize="20sp"
        android:text="gmae start"
        android:background="@drawable/round_square"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>