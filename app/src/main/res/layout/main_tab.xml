<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/basic_info"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/avata_photo"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="150dp"
                android:layout_height="200dp" />
            <co.ceryle.fitgridview.FitGridView
                android:id="@+id/stack_info"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignTop="@+id/avata_photo"
                android:layout_alignBottom="@id/avata_photo"
                android:layout_toEndOf="@+id/avata_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="1"/>
        </RelativeLayout>
        <co.ceryle.fitgridview.FitGridView
            android:layout_below="@+id/basic_info"
            android:id="@+id/detail_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:numColumns="1"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>
</FrameLayout>